<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clickListener"
        android:orientation="vertical"
        android:padding="5dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTitle"
                    style="@style/customFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Heading 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                    android:id="@+id/tvDate"
                    style="@style/customFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20-6-089"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                    android:id="@+id/tvDescription"
                    style="@style/customFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_corners_button"
                    android:drawableStart="@drawable/notification_icon"
                    android:drawablePadding="10dp"
                    android:padding="12dp"
                    android:text="The Bus services will not be continue due to public holiday"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>